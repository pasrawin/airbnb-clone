<h3>ALL PROPERTIES LIST</h3>
<%= button_to "Create New Listing", new_listing_path %>

<table>
	<tr>
		<th></th>
		<th> Property </th>
		<th> City </th>
		<th> Country </th>
		<th> Status </th>
	</tr>
	<% @listings.each_with_index do |listing, index| %>
	<tr>
		<td><%= index + 1 %></td>
		<td><%= link_to listing.title, listing %></td>
		<td><%= listing.city %></td>
		<td><%= listing.country %></td>
		<td><%= listing.status %></td>
	</tr>
	<% end %>
</table>


<% form_tag listings_path do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </p>
<% end %>